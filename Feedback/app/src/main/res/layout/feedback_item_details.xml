<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/white"
    tools:context=".WriteFeedbackFragment">

    <TextView
        android:id="@+id/id_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="@string/feedback_333"
        android:textColor="@color/blue"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/date_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkerGrey"
        android:layout_below="@id/id_details"
        android:layout_marginTop="10dp"
        android:text="@string/_2020_20_20" />

    <TextView
        android:id="@+id/username_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_below="@id/date_details"
        android:text="@string/by_anna"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/feedback_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:textColor="@color/blue"
        android:layout_below="@id/username_details"
        android:textSize="19sp"
        android:text="@string/long_text_of_feedback_body_long_text_of_feedback_body_long_text_of_feedback_body" />
    <TextView
        android:id="@+id/type_details"
        android:paddingVertical="2dp"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_text_field_blue"
        android:layout_below="@id/feedback_details"
        android:text="@string/suggestion" />

    <ImageView
        android:id="@+id/cookie_icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/feedback_details"
        android:layout_toEndOf="@id/type_details"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_cookie_full"
        android:contentDescription="@string/cookie_icon" />

    <TextView
        android:id="@+id/rating_details"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:text="@string/x_3_5"
        android:textColor="@color/darkerBlue"
        android:layout_marginStart="5dp"
        android:layout_below="@id/feedback_details"
        android:layout_toEndOf="@id/cookie_icon"/>
    <ImageView
        android:id="@+id/delete_feedback_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_trash"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/trash_icon" />
    <ImageView
        android:id="@+id/edit_feedback_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_edit"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/delete_feedback_details"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/pencil_icon" />
    <Button
        android:id="@+id/back_to_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/back_to_list"
        android:background="@drawable/rounded_text_field_blue"
        android:layout_centerHorizontal="true"
        android:paddingVertical="12dp"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>